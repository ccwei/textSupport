!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %meta(name="description" content="TextSupport is a mobile app and web chat service that provides a platform for giving and receiving social support. Our ultimate goal is to improve peopleâ€™s wellbeing and sense of connection with others.")
    %title= content_for?(:title) ? yield(:title) : "TextSupport"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    = stylesheet_link_tag "cosmo", :media => "all"
    = yield(:page_stylesheet) if content_for?(:page_stylesheet)
    %link(href="#{image_path('favicon.ico')}" rel="shortcut icon")
    %link(href="#{image_path('logo.png')}" rel="image_src")


  %body{:style => "background-image: url('/assets/background.png');"}
    .navbar
      .navbar-inner
        .container
          .nav-collapse.collapse
            %a.brand{:href => '/'}
              TextSupport
            %ul.nav
              %li
                =link_to 'About Us', about_url
              %li
                =link_to 'Privacy', privacy_url
              %li
                =link_to 'Terms', terms_url
              %li
                =link_to 'Contacts', contacts_url
              -if current_member
                %li
                  =link_to 'Edit Profile', edit_member_registration_path
                %li
                  =link_to "Sign out", destroy_member_session_path, :method => :delete
    .container
      = yield

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "cosmo"
    :javascript
