<h2>Sign up</h2>
<div class='row'>
  <div class='span4'>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div>Email<br />
      <%= f.email_field :email, :autofocus => true %></div>

      <div>Password<br />
      <%= f.password_field :password %></div>

      <div>Password Confirmation<br />
      <%= f.password_field :password_confirmation %></div>

      <div class='details'>
        <div>Nickname (Please don't enter your real name.)<br />
        <%= f.text_field :nickname %></div>

        <div>Gender (Please put 'Male' or 'Female')<br />
        <%= f.text_field :gender %></div>

        <div>Occupation<br />
        <%= f.text_field :occupation %></div>

        <div>Description (This is what users will see, put a short description that you want the user to know about you. Don't include any personal information.)<br />
        <%= f.text_area :description, :size => "30x15" %></div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
      </div>

      <div><%= f.submit "Sign up" %></div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
